@model IEnumerable<KF31_WebApp.Models.Book>

@{
    ViewData["Title"] = "本";
}
<div class="book">

<div class="book_search_background">
<div class="book_search">
    <div class="search_form">
                <form method="get" action="@Url.Action("Search", "Book")">
                    <input class="search_key" name="keyword" type="text" value="@ViewContext.HttpContext.Request.Query["keyword"]" placeholder="キーワードを入力してください！" />
                    <input class="search_button" type="submit" value="検索" style="cursor:pointer;" />
                </form>
    </div>
    <div>
        <a href="dddddd">より詳しく絞り込む→</a>
    </div>
   
</div>
    </div>
<div class="book_list">

 @foreach (var item in Model)
  {
      <div class="book_tag">
         <div class="book_img">
            <img src="~/picture/book_01_orange.png">
         </div>
         <div class="book_bor"></div>
         <div class="book_news">
                    <p>タイトル: @Html.DisplayFor(modelItem => item.Book_title)</p>
                    <p>著者：@Html.DisplayFor(modelItem => item.Book_Author)</p>
         </div>
         <div class="detail_btn"><a class="detail_btn_a">詳細</a></div>
      </div>
         
   }
   
</div>
</div>

