@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model KF31_WebApp.Models.YoyakuView

@{
    ViewData["Title"] = "予約";
}
<div class="yoyaku_detail">
    <div class="yoyaku_detail_title">
        <h6>本詳細情報</h6>
    </div>
    <div class="yoyaku_body">
        <div class="yoyaku_body_book">
            <div class="yoyaku_book_img">
                    <img src="~/picture/@(Model.Book.Book_Image + ".jpeg")" />
                </div>
                <div class="yoyaku_bor"></div>
                <div class="yoyaku_news">
                <form asp-action="Yoyaku">
                    <input type="hidden" asp-for="BookID" />
                    <input type="hidden" asp-for="userID" />
                    <div class="userID">
                        <label>会員ID</label>
                        <p>@Model.userID</p>
                    </div>
                    <div class="title">
                        <label>本タイトル</label>
                        <p>@Model.Book.Book_title</p>
                    </div>
                    <div class="libraty">
                        <label>図書館</label>
                        @Html.DropDownListFor(model => model.LibratyID,
                                 Model.Libraries,
                                 "図書館を選択してください",
                                 new { @class = "form-control", id = "libraries" })
                        <span asp-validation-for="LibratyID" class="text-danger"></span>

                    </div>
                    <div class="returntime">
                        <label>返却日</label>
                        <input type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" asp-for="Return_time" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" class="form-control" required />
                    </div>
                    <div>
                        <input type="submit" class="yoyaku_btn" value="予約" />

                        </div>
                    </form>
                </div>
        </div>
       


    </div>
    <div class="detail_footer">

        <a class="detail_footer_btn" asp-area="" asp-controller="Book" asp-action="BookList">トップへ戻る</a>
    </div>
</div>