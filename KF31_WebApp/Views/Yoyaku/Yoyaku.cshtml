@model KF31_WebApp.Models.YoyakuView

@{
    ViewData["Title"] = "予約";
}
<div class="yoyaku_detail">
    <div class="yoyaku_detail_title">
        <h6>本詳細情報</h6>
    </div>
    <div class="yoyaku_body">
        <div class="yoyaku_body_book">
            <div class="yoyaku_book_img">
                    <img src="~/picture/B1.jpg" />
                </div>
                <div class="yoyaku_bor"></div>
                <div class="yoyaku_news">
                <form asp-action="AccountUpdate" method="post">
                    <div class="userID">
                        <label>会員ID</label>
                        <p>@Model.Member.userID</p>
                    </div>
                    <div class="title">
                        <label>本タイトル</label>
                        <p>@Model.Book.Book_title</p>
                    </div>
                    <div class="libraty">
                        <label>図書館</label>
                        @Html.DropDownListFor(model => model.SelectedLibraryId,
                                 Model.Libraries,
                                 "図書館を選択してください",
                                 new { @class = "form-control", id = "libraries" })
                    </div>
                    <div class="returntime">
                        <label>返却日</label>
                        <input type="date" name="reservationDate" class="form-control" required />
                    </div>
                    <div>
                        @if(Model.userID == null)
                        {
                            <a class="yoyaku_btn" asp-action="LoginYoyaku" asp-controller="Login">予約</a>
                        }
                        else
                        {
                            <a class="yoyaku_btn"  asp-action="Yoyaku" asp-controller="Yoyaku">予約</a>
                        }
                        </div>
                    </form>
                </div>
        </div>
       


    </div>
    <div class="detail_footer">

        <a class="detail_footer_btn" asp-area="" asp-controller="Book" asp-action="BookList">トップへ戻る</a>
    </div>
</div>